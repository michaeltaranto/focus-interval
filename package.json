{
  "name": "focus-interval",
  "version": "1.0.0",
  "description": "Run a function on an interval while an element is focused",
  "main": "dist/index.js",
  "scripts": {
    "clean": "rm -rf dist && mkdir dist",
    "lint": "eslint --config .eslintrc.js src test",
    "test": "npm run lint && mocha --compilers js:babel-register",
    "test:dev": "mocha --compilers js:babel-register --watch --reporter spec",
    "build": "npm run clean && ./node_modules/.bin/babel -d dist/ src/",
    "prepublish": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mjt01/focus-interval.git"
  },
  "author": {
    "name": "Michael Taranto",
    "homepage": "https://github.com/mjt01"
  },
  "license": [
    {
      "type": "MIT",
      "url": "http://mjt01.mit-license.org"
    }
  ],
  "bugs": {
    "url": "https://github.com/mjt01/focus-interval/issues"
  },
  "homepage": "https://github.com/mjt01/focus-interval#readme",
  "devDependencies": {
    "babel-cli": "^6.6.0",
    "babel-eslint": "^5.0.0",
    "babel-plugin-add-module-exports": "^0.1.2",
    "babel-preset-es2015": "^6.6.0",
    "babel-register": "^6.6.0",
    "chai": "^3.5.0",
    "eslint": "^2.2.0",
    "eslint-plugin-mocha": "^2.0.0",
    "mkdom": "^1.0.1",
    "mocha": "^2.4.5",
    "sinon": "^1.17.3"
  }
